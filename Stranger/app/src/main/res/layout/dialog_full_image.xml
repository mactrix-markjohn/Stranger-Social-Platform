<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/requestdescibe">



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/chatimage"
                    app:cardElevation="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fullimage"
                        android:src="@mipmap/materialwhite"
                        android:background="#ee000000" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="top"
                        android:background="#00000000"
                        android:id="@+id/requestheader">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:scaleType="center"
                            android:background="#44000000"
                            android:foreground="?selectableItemBackground"
                            android:id="@+id/fullcancel"
                            android:src="@drawable/cancelwhite"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:scaleType="center"
                            android:foreground="?selectableItemBackground"
                            android:src="@drawable/featherpenblackwhite"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/humn"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:drawableLeft="@drawable/chat_bubbleblack"
                            android:drawablePadding="10dp"
                            android:textSize="16sp"
                            android:text="Chat Media"/>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </RelativeLayout>





        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>