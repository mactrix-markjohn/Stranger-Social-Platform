<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introduction">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <!--include layout="@layout/content_introduction" /-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relatevieww"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/strangechild"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0ffffff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:id="@+id/stylelayout"
            android:layout_above="@+id/ger">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/cicle"
                android:layout_centerHorizontal="true"
                android:id="@+id/centerdot" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/centerdot"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/centerdot"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="40sp"
            android:id="@+id/ger"
            android:textColor="@color/blurtrans"
            android:layout_above="@+id/introdescribe"
            android:fontFamily="@font/kaushanscriptregular"
            android:textStyle="bold"
            android:layout_marginBottom="1dp"
            android:text="Stranger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/introdescribe"
            android:fontFamily="@font/humn"
            android:textSize="12dp"
            android:text="@string/strangertheme"
            android:textColor="@color/blurtrans"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/stylelayouta"
            android:layout_below="@+id/introdescribe">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/cicle"
                android:layout_centerHorizontal="true"
                android:id="@+id/centerdota" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/centerdota"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/centerdota"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</android.support.design.widget.CoordinatorLayout>