<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/chatlistphoto"
        android:src="@mipmap/profileavatar"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:layout_toRightOf="@+id/chatlistphoto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatusername"
        android:text="Mark John"
        android:textStyle="bold"
        android:fontFamily="@font/humn"
        android:layout_toLeftOf="@+id/connecte"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:textSize="19sp"
        android:textColor="#bb000000" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/chatlastmessage"
         android:fontFamily="@font/humn"
         android:textSize="16sp"
         android:text="Hello people"
         android:layout_below="@+id/chatusername"
         android:textColor="#66000000"
         android:layout_marginRight="20dp"
         android:layout_marginTop="2dp"
         android:maxLines="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connecte"
            android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/connect"
            android:layout_marginRight="5dp"
            >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/connectioncolor"
                android:layout_toRightOf="@+id/connectionstatus"
                android:background="@drawable/greencircle"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/connectionstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/humn"
                android:gravity="center"
                android:text="online"
                android:textColor="#77000000"
                android:textSize="11sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/orangercircle"
                android:gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/humn"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="0"
               android:id="@+id/chatinfo"/>


        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="62dp"
        android:background="@drawable/line"/>


</RelativeLayout>