<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:id="@+id/postmedia"
        android:visibility="visible"
        android:layout_below="@id/postseperate">


        <android.support.v7.widget.CardView android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/postimage"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:id="@+id/fontsample"
                android:textColor="#000000"
                android:gravity="center"
                android:text="ABcd"
                android:fontFamily="@font/kaushanscriptregular"/>


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/postimage"
            android:layout_centerVertical="true"
            android:id="@+id/fonttitle"
            android:text="FlowerLine"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:fontFamily="@font/humn"
            android:textColor="#99000000"/>




    </RelativeLayout>

</RelativeLayout>