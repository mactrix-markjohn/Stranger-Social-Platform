<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">







        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bluecurveright"
            android:id="@+id/chatinfo">

            <TextView
                android:id="@+id/chattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/chatstatus"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/humn"
                android:text="5:45PM"
                android:textColor="#bbffffff"
                android:textSize="9sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatstatus"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:textSize="9sp"
                android:fontFamily="@font/humn"
                android:textColor="#bbffffff"
                android:text="Delivered"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:id="@+id/chatimagemore"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/moresmallwhite"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/chattime"
                android:layout_marginTop="10dp"
                android:id="@+id/chatimage"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#00aaff"
                app:cardElevation="2dp"
                android:layout_marginLeft="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:id="@+id/headset"
                        android:src="@drawable/music_headset_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:fontFamily="@font/humn"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:id="@+id/chataudioname"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/playpausecard"
                        android:layout_toRightOf="@+id/headset"
                        android:text="James Arthur - Can I be Him.mp3"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/playpausecard"
                        android:layout_marginRight="5dp"
                        android:scaleType="center"
                        android:src="@drawable/play_button_sm"/>


                </RelativeLayout>




            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/humn"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="15dp"
                android:linksClickable="true"
                android:id="@+id/chatmessage"
                android:saveEnabled="true"
                android:autoLink="all"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:text="Hello World, My name is Mark John. What is yours and where do you stay, Lagos or Ibadan"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:layout_below="@+id/chatimage"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>







    </RelativeLayout>




</RelativeLayout>