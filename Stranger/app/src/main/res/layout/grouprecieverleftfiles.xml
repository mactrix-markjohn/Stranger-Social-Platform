<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp">







        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bluecurveleft"
            android:id="@+id/chatinfo">

            <TextView
                android:id="@+id/chattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignBaseline="@+id/chatstatus"
                android:layout_toRightOf="@+id/chatstatus"
                android:fontFamily="@font/humn"
                android:text="5:45PM"
                android:textColor="#99000000"
                android:textSize="9sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatstatus"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:textSize="11sp"
                android:fontFamily="@font/humn"
                android:textColor="#00aaff"
                android:text="stranger"/>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:id="@+id/chatimagemore"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/moresmall"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/chattime"
                android:layout_marginTop="10dp"
                android:id="@+id/chatimage"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="#e0e0e0"
                app:cardElevation="2dp"
                android:layout_marginLeft="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:id="@+id/headset"
                        android:src="@drawable/folder"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:fontFamily="@font/humn"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:id="@+id/chatfilename"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/downloadfile"
                        android:layout_toRightOf="@+id/headset"
                        android:text="James Arthur - Can I be Him.mp3"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/downloadfile"
                        android:layout_marginRight="5dp"
                        android:scaleType="center"
                        android:src="@drawable/download"/>


                </RelativeLayout>




            </android.support.v7.widget.CardView>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/humn"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:linksClickable="true"
                android:saveEnabled="true"
                android:autoLink="all"
                android:id="@+id/chatmessage"
                android:paddingRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:text="Hello, My name is Mark John Chukwuemeka Okparaeke, what is yours . ok do tell me. lety me guess"
                android:layout_below="@+id/chatimage"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>







    </RelativeLayout>




</RelativeLayout>