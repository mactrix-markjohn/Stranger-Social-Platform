<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="1dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="2dp"
        android:textSize="10sp"
        android:id="@+id/noticetime"
        android:fontFamily="@font/humn"
        android:textColor="#88000000"
        android:text="11:20 PM  Sat 27 May, 2019"/>



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/original"
            android:id="@+id/userphoto" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#55000000"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/lettergradient"
            android:layout_centerVertical="true"/>







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/userphoto"
            android:layout_toLeftOf="@+id/more"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/humn"
                android:textSize="12sp"
                android:id="@+id/shares"
                android:maxLines="1"
                android:layout_below="@+id/username"
                android:gravity="center"
                android:textColor="#99000000"
                android:text="is currently around you and this Strnager shares your" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/humn"
                android:textSize="12sp"
                android:id="@+id/interest"
                android:layout_below="@+id/shares"
                android:maxLines="1"
                android:textStyle="bold"
                android:maxLength="28"
                android:gravity="center"
                android:textColor="#ddc00000"
                android:text="Android Programming, Java" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/humn"
                android:textSize="12sp"
                android:maxLines="1"
                android:id="@+id/intere"
                android:layout_toRightOf="@+id/interest"
                android:layout_marginLeft="4dp"
                android:layout_below="@+id/shares"
                android:gravity="center"
                android:textColor="#99000000"
                android:text="interest. Click to know more." />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="#aa000000"
                android:fontFamily="@font/humn"
                android:textSize="14sp"
                android:text="Mark John Chukwuemeka Okparaeke" />



        </RelativeLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/more"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/moresmalla" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
