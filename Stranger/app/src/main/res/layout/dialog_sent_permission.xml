<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#dd0393dc"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/requestbelowlay"
                android:layout_alignParentBottom="true">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/sepee"
                    app:cardElevation="5dp"
                    android:id="@+id/leftclick"
                    android:foreground="?selectableItemBackground"
                    app:cardBackgroundColor="#00aaff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/usericonwhite"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/humn"
                        android:text="Stranger Profile"/>


                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:id="@+id/sepee"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/sepee"
                    android:id="@+id/rightclick"
                    android:foreground="?selectableItemBackground"
                    app:cardBackgroundColor="#ffffff"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/send"
                        android:fontFamily="@font/humn"
                        android:text="Request Permission"/>

                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_above="@+id/requestbelowlay"
                android:id="@+id/requestdescibe">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/humn"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:text="Hello Stranger, due to Privacy issues the fellow Stranger's current location can not be shown to you. But you can still find out, all you have to do is to Request for Permission by clicking the below button. Thank you"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/requestdescibe"
                android:id="@+id/requestheader">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:foreground="?selectableItemBackground"
                    android:id="@+id/requestcancel"
                    android:src="@drawable/cancelwhite"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:scaleType="center"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/featherpenblackwhite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/humn"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/featherpenblackwhite"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:text="Send Permission Request"/>


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>