<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/groupphoto"
        android:src="@mipmap/profileavatar"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:layout_toRightOf="@+id/groupphoto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupname"
        android:text="200lvl CSC Student"
        android:fontFamily="@font/humn"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#bb000000" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/groupmembercount"
         android:fontFamily="@font/humn"
         android:textSize="14sp"
         android:text="30 Members"
         android:layout_below="@+id/groupname"
         android:textColor="#00aaff"
         android:layout_marginRight="20dp"
         android:layout_marginTop="2dp"
         android:maxLines="1" />



    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#ffffff"
        android:id="@+id/epcardsign"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/connecte"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:id="@+id/epadsign"
            android:src="@drawable/group"/>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connecte"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="3dp"
        android:layout_centerVertical="true"
        >

       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:scaleType="centerInside"
           android:visibility="gone"
           android:id="@+id/groupaccess"
           android:src="@drawable/password"/>


    </RelativeLayout>




</RelativeLayout>