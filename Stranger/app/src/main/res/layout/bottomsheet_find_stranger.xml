<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".FindStranger"
    android:background="#ffffff"
    android:padding="3dp"
    android:paddingBottom="10dp"
    android:id="@+id/findstrangersheet"
    tools:showIn="@layout/app_bar_find_stranger">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:background="#dd00aaff"
        android:id="@+id/findbottomheader">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:src="@drawable/arrow_down_white"
            android:onClick="folddown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/humn"
            android:layout_centerInParent="true"
            android:textColor="#ccffffff"
            android:textSize="15sp"
            android:text="Stranger Result"/>






    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findstrangerlistr"
        android:layout_below="@+id/findbottomheader"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:divider="@drawable/line"/>


</RelativeLayout>